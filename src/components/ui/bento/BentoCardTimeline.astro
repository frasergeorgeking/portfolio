---
// Timeline Bento Card Component
// Specialized card for displaying timeline content

import BentoCardBase from "./BentoCardBase.astro";

interface Props {
    name: string;
    class?: string;
}

const { name, class: className } = Astro.props;
---

<BentoCardBase class={className}>
    <slot name="background" slot="background" />

    <div class="p-4 sm:p-6 min-h-full flex flex-col">
        <!-- Header section -->
        <div
            class="pointer-events-none z-10 flex transform-gpu flex-col gap-1 mb-6"
        >
            <div
                class="origin-left transform-gpu text-neutral-700 transition-all duration-300 ease-in-out"
            >
            </div>
            <h3 class="text-xl font-semibold text-neutral-300">
                {name}
            </h3>
        </div>

        <!-- Timeline content -->
        <div class="flex-1">
            <slot />
        </div>
    </div>
</BentoCardBase>
