---
// Base Bento Card Component
// Provides the shared card structure and styling for all bento card variants

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div
    class:list={[
        "group relative col-span-3 flex flex-col justify-between overflow-hidden rounded-2xl",
        // light styles
        "bg-background [box-shadow:0_0_0_1px_rgba(0,0,0,.03),0_2px_4px_rgba(0,0,0,.05),0_12px_24px_rgba(0,0,0,.05)]",
        // dark styles
        "dark:bg-background transform-gpu dark:[box-shadow:0_-20px_80px_-20px_#ffffff1f_inset] dark:[border:1px_solid_rgba(255,255,255,.1)]",
        className,
    ]}
>
    <!-- Background slot for custom backgrounds -->
    <div>
        <slot name="background" />
    </div>

    <!-- Main content slot -->
    <slot />

    <!-- Hover overlay effect -->
    <div
        class="pointer-events-none absolute inset-0 transform-gpu transition-all duration-300 group-hover:bg-black/[.03] group-hover:dark:bg-neutral-800/10"
    >
    </div>
</div>
