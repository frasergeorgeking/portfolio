---
import Icon from "./Icon.astro";
import type { IconPaths } from "./IconPaths";

// TODO FK: Update social links.
const iconLinks: {
    label: string;
    href: string;
    icon: keyof typeof IconPaths;
}[] = [
    {
        label: "GitHub",
        href: "https://github.com/frasergeorgeking",
        icon: "github-logo",
    },
    {
        label: "LinkedIn",
        href: "https://www.linkedin.com/in/frasergeorgeking",
        icon: "linkedin-logo",
    },
] as const;
---

<div class="socials">
	{
		iconLinks.map(({ href, icon, label }) => (
			<a
				href={href}
				class="social"
				target="_blank"
				rel="noopener noreferrer"
			>
				<span class="sr-only">{label}</span>
				<Icon icon={icon} />
			</a>
		))
	}
</div>

<style>
	@import "tailwindcss";

	.socials {
		--icon-padding: 0.5rem;
		@apply flex flex-wrap text-xl;
		gap: 0.625rem;
	}

	.social {
		@apply flex no-underline transition-colors duration-200;
		padding: var(--icon-padding);
		color: var(--accent-dark);
	}

	.social:hover,
	.social:focus {
		color: var(--accent-text-over);
	}

	@media (min-width: 1024px) {
		.socials {
			--icon-padding: 0.375rem;
			gap: 0;
		}
	}
</style>
