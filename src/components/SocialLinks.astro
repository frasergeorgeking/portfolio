---
import Icon from "./Icon.astro";
import type { iconPaths } from "./IconPaths";

// TODO FK: Update social links.
const iconLinks: {
	label: string;
	href: string;
	icon: keyof typeof iconPaths;
}[] = [
	{ label: "Twitter", href: "https://twitter.com/me", icon: "twitter-logo" },
	{ label: "Twitch", href: "https://twitch.tv/me", icon: "twitch-logo" },
	{ label: "GitHub", href: "https://github.com/me", icon: "github-logo" },
	{ label: "CodePen", href: "https://codepen.io/me", icon: "codepen-logo" },
	{
		label: "dribbble",
		href: "https://dribbble.com/me",
		icon: "dribbble-logo",
	},
	{
		label: "YouTube",
		href: "https://www.youtube.com/@me/",
		icon: "youtube-logo",
	},
] as const;
---

<div class="socials">
	{
		iconLinks.map(({ href, icon, label }) => (
			<a href={href} class="social" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">{label}</span>
				<Icon icon={icon} />
			</a>
		))
	}
</div>

<style>
	.socials {
		--icon-padding: 0.5rem;
		@apply flex flex-wrap;
		gap: 0.625rem;
		font-size: var(--text-xl);
	}

	.social {
		@apply flex no-underline transition-colors duration-200;
		padding: var(--icon-padding);
		color: var(--accent-dark);
	}

	.social:hover,
	.social:focus {
		color: var(--accent-text-over);
	}

	@media (min-width: 1024px) {
		.socials {
			--icon-padding: 0.375rem;
			gap: 0;
		}
	}
</style>
