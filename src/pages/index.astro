---
import BentoCardBase from "@/components/ui/bento/BentoCardBase.astro";
import BentoCardHero from "@/components/ui/bento/BentoCardHero.astro";
import BentoCardStandard from "@/components/ui/bento/BentoCardStandard.astro";
import BentoCardTimeline from "@/components/ui/bento/BentoCardTimeline.astro";
import LazyButton from "@/components/ui/buttons/LazyButton.astro";
import LazyLanyard from "@/components/ui/lanyard/LazyLanyard.astro";
import Timeline from "@/components/ui/Timeline.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const careerTimeline = [
	{
		title: "Switch Studios",
		subtitle: "L2 Client Developer",
		date: "Jul 2022 - Dec 2025",
	},
	{
		title: "Switch Studios",
		subtitle: "L1 Client Developer",
		date: "May 2021 - Jul 2022",
	},
	{
		title: "University of Suffolk",
		subtitle: "BA (Hons) Computer Games Design",
		date: "Sept 2017 - Oct 2020",
	},
];
---

<BaseLayout>
	<div class="flex justify-center w-full">
		<div
			class="grid auto-rows-min grid-cols-1 sm:grid-cols-3 lg:grid-cols-5 gap-3 sm:gap-3 lg:gap-6 max-w-7xl p-4 sm:p-6 lg:p-8"
		>
			<BentoCardHero
				class="col-span-1 sm:col-span-3 lg:col-span-3 lg:row-span-3"
			>
				<div slot="header" class="flex flex-col gap-1">
					<p class="text-neutral-300">Hi, I'm Fraser.</p>
					<div class="flex items-center gap-2">
						<div
							class="w-2 h-2 bg-green-500 rounded-full animate-pulse"
						>
						</div>
						<span class="text-sm text-neutral-400">
							Available for hire ðŸ‘€
						</span>
					</div>
				</div>

				<div slot="title">
					<h1 class="text-4xl text-neutral-300 leading-tight">
						Design-minded Game Developer, crafting interactive
						experiences with an eye for player feel.
					</h1>
				</div>

				<div slot="actions">
					<!-- TODO FK: Add final CTA buttons. Implement Lazy wrapper. -->
					<LazyButton initialLabel="I am a button." />
				</div>

				<div slot="footer">
					<p class="text-neutral-300">I am a footer</p>
				</div>
			</BentoCardHero>

			<BentoCardBase
				class="col-span-1 sm:col-span-1 lg:col-span-1 lg:row-span-1 sm:min-h-[350px]"
			>
				<LazyLanyard />
			</BentoCardBase>
			<BentoCardTimeline
				name="Experience"
				class="col-span-1 sm:col-span-1 lg:col-span-1 lg:row-span-3"
			>
				<Timeline entries={careerTimeline} />
			</BentoCardTimeline>

			<BentoCardStandard
				name="Lorem Ipsum 4"
				icon="trophy"
				description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
				href="#"
				cta="Learn more"
				class="col-span-1 sm:col-span-1 lg:col-span-1 lg:row-span-2"
			/>
		</div>
	</div>
</BaseLayout>
